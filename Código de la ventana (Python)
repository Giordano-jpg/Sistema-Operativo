import tkinter as tk

# Función a la que se llamará cuando se haga clic en algún botón
def boton_clicado():
    print("Botón clicado")

# Creamos una instancia de la clase Tk, que representa la ventana principal de la aplicación
ventana = tk.Tk()

# Configuramos la ventana para que ocupe toda la pantalla
ventana.attributes("-fullscreen", True)

# Cambiamos el color de fondo de la ventana
ventana.configure(bg="#0c9ae2")

# Añadimos un título a la ventana
ventana.title("Mi Ventana")

# Creamos cuatro botones con forma cuadrada
boton1 = tk.Button(ventana, text="Botón 1", command=boton_clicado, border=5, width=10, height=5)
boton2 = tk.Button(ventana, text="Botón 2", command=boton_clicado, border=5, width=10, height=5)
boton3 = tk.Button(ventana, text="Botón 3", command=boton_clicado, border=5, width=10, height=5)
boton4 = tk.Button(ventana, text="Botón 4", command=boton_clicado, border=5, width=10, height=5)

# Los colocamos en la parte superior izquierda de la ventana
boton1.grid(row=0, column=0, padx=10, pady=10)
boton2.grid(row=0, column=1, padx=10, pady=10)
boton3.grid(row=1, column=0, padx=10, pady=10)
boton4.grid(row=1, column=1, padx=10, pady=10)

# Mostramos la ventana
ventana.mainloop()
