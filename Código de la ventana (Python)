import tkinter as tk

# Función a la que se llamará cuando se haga clic en el botón
def boton_clicado():
    print("Botón clicado")

# Función a la que se llamará cuando se haga clic en el botón (Cerrar ventana)
def cerrar_ventana():
    ventana.destroy()

# Creamos una instancia de la clase Tk, que representa la ventana principal de la aplicación
ventana = tk.Tk()

# Configuramos la ventana para que ocupe toda la pantalla
ventana.attributes("-fullscreen", True)

# Cambiamos el color de fondo de la ventana
ventana.configure(bg="#0c9ae2")

# Obtenemos las dimensiones de la pantalla
ancho_pantalla = ventana.winfo_screenwidth()
alto_pantalla = ventana.winfo_screenheight()

# Creamos los botones en la parte superior izquierda (1/4 del ancho y 1/4 del alto)
boton1 = tk.Button(ventana, text="Botón 1", command=boton_clicado)
boton1.place(x=ancho_pantalla // 80, y=alto_pantalla // 50, width=100, height=100)
boton2 = tk.Button(ventana, text="Botón 2", command=boton_clicado)
boton2.place(x=ancho_pantalla // 9, y=alto_pantalla // 50, width=100, height=100)
boton3 = tk.Button(ventana, text="Botón 3", command=boton_clicado)
boton3.place(x=ancho_pantalla // 80, y=alto_pantalla // 5, width=100, height=100)
# Botón para cerrar la ventana
boton4 = tk.Button(ventana, text="Cerrar", command=cerrar_ventana)
boton4.place(x=ancho_pantalla // 9, y=alto_pantalla // 5, width=100, height=100)


# Creamos un rectángulo horizontal en la parte inferior de la pantalla (toda la anchura y 1/4 de la altura)
canvas = tk.Canvas(ventana, bg="white")
canvas.place(x=ancho_pantalla // 2000, y=alto_pantalla // 1.08, width=ancho_pantalla, height=alto_pantalla // 13)

# Mostramos la ventana
ventana.mainloop()
