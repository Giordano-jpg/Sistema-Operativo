import tkinter as tk

# Función a la que se llamará cuando se haga clic en el botón
def boton_clicado():
    print("Botón clicado")

# Creamos una instancia de la clase Tk, que representa la ventana principal de la aplicación
ventana = tk.Tk()

# Configuramos la ventana para que ocupe toda la pantalla
ventana.attributes("-fullscreen", True)

# Obtenemos las dimensiones de la pantalla
ancho_pantalla = ventana.winfo_screenwidth()
alto_pantalla = ventana.winfo_screenheight()

# Creamos los botones en la parte superior izquierda (1/4 del ancho y 1/4 del alto)
boton1 = tk.Button(ventana, text="Botón 1", command=boton_clicado)
boton1.place(x=ancho_pantalla // 80, y=alto_pantalla // 50, width=100, height=100)
boton1 = tk.Button(ventana, text="Botón 2", command=boton_clicado)
boton1.place(x=ancho_pantalla // 9, y=alto_pantalla // 50, width=100, height=100)
boton2 = tk.Button(ventana, text="Botón 3", command=boton_clicado)
boton2.place(x=ancho_pantalla // 80, y=alto_pantalla // 5, width=100, height=100)


# Creamos un rectángulo horizontal en la parte inferior de la pantalla (toda la anchura y 1/4 de la altura)
canvas = tk.Canvas(ventana, bg="red")
canvas.place(x=0, y=3 * alto_pantalla // 4, width=ancho_pantalla, height=alto_pantalla // 4)

# Mostramos la ventana
ventana.mainloop()
